{
  "version": "1.1.2",
  "repository": {
    "type": "git",
    "url": "git@github.com:embroider-build/content-tag.git"
  },
  "scripts": {
    "build": "./build.sh",
    "test": "pnpm --filter '*' test",
    "prepare": "./build.sh"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^6.0.0",
    "@release-it/bumper": "^5.1.0",
    "eslint": "^8.44.0",
    "release-it": "^16.2.1",
    "toml": "^3.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "@release-it/bumper": {
        "in": {
          "file": "Cargo.toml",
          "type": "text/plain"
        },
        "out": {
          "file": "Cargo.toml",
          "type": "text/plain"
        }
      }
    },
    "git": {
      "requireUpstream": false,
      "tag": false
    },
    "npm": {
      "publish": false,
      "ignoreVersion": true
    }
  }
}